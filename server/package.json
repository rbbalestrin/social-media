{
  "name": "@advanced-react/server",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch --clear-screen=false ./index.ts",
    "drizzle:generate": "drizzle-kit generate",
    "drizzle:regenerate": "rm -rf ./drizzle && rm database.db && pnpm drizzle:generate && pnpm drizzle:migrate && pnpm drizzle:seed",
    "drizzle:migrate": "drizzle-kit migrate",
    "drizzle:seed": "tsx ./database/seed.ts"
  },
  "dependencies": {
    "@advanced-react/shared": "workspace:*",
    "@trpc/server": "11.0.0-rc.645",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^12.2.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.36.4",
    "drizzle-zod": "^0.5.1",
    "express": "^4.21.1",
    "jsonwebtoken": "^9.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.3.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/better-sqlite3": "^7.6.12",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.0",
    "drizzle-kit": "^0.28.1",
    "tsx": "^4.19.2"
  }
